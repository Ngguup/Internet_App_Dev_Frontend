{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Growth_Forecast",
  "version": "0.1.0",
  "identifier": "com.growth.forecast.dev",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "https://localhost:3000/Internet_App_Dev_Frontend/",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "url": "index.html",
        "title": "Growth Forecast",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  
  "plugins": {
        "http": {
          "enabled": true
        }
    }
}
